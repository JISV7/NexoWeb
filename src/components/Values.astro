---
const values = [
    {
        icon: "verified",
        title: "Profesionalismo",
        desc: "Gestión de alto nivel en cada interacción.",
    },
    {
        icon: "light_mode",
        title: "Transparencia",
        desc: "Claridad total en reportes y acciones.",
    },
    {
        icon: "handshake",
        title: "Respeto por el vínculo",
        desc: "Cuidamos la relación entre instituciones y clientes.",
    },
    {
        icon: "trending_up",
        title: "Resultados sostenibles",
        desc: "Enfoque en métricas a largo plazo y calidad.",
    },
];
---

<section class="py-24 bg-white dark:bg-secondary">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div
            class="bg-secondary dark:bg-surface-dark rounded-[3rem] overflow-hidden shadow-2xl flex flex-col-reverse lg:flex-row min-h-[500px]"
        >
            <div
                class="lg:w-1/2 relative bg-white/10 p-10 lg:p-16 flex flex-col justify-center text-white"
            >
                <h2 class="text-4xl lg:text-5xl font-bold mb-8 font-display">
                    Nuestros valores
                </h2>
                <ul class="space-y-6">
                    {
                        values.map((val) => (
                            <li class="flex items-start">
                                <span class="material-icons mr-4 text-accent">
                                    {val.icon}
                                </span>
                                <div>
                                    <h4 class="text-xl font-bold mb-1">
                                        {val.title}
                                    </h4>
                                    <p class="font-light opacity-80">
                                        {val.desc}
                                    </p>
                                </div>
                            </li>
                        ))
                    }
                </ul>
            </div>
            <div class="lg:w-1/2 relative bg-gray-100 dark:bg-gray-800">
                <div class="absolute inset-0 p-6">
                    <img
                        alt="Valores corporativos"
                        class="w-full h-full object-cover rounded-[2rem] shadow-lg"
                        src="/placeholder.webp"
                    />
                </div>
            </div>
        </div>
    </div>
</section>
