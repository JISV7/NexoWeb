---
const navItems = [
    { name: "Inicio", href: "/" },
    { name: "Quiénes Somos", href: "/about" },
    { name: "Experiencia", href: "/experience" },
    { name: "Servicios", href: "/services" },
    { name: "Contacto", href: "/contact" },
];

// Determine current page for active link highlighting
const currentPage = Astro.url.pathname;
---

<nav
    class="sticky top-0 z-50 bg-surface-light/90 dark:bg-secondary/90 backdrop-blur-md shadow-lg border-b border-gray-200 dark:border-gray-700 transition-colors duration-300"
>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-20 items-center">
            <div class="flex-shrink-0 flex items-center">
                <a href="/" class="flex items-center gap-2 group">
                    <span
                        class="material-icons text-primary text-4xl group-hover:text-accent transition-colors"
                        >layers</span
                    >
                    <div class="flex flex-col">
                        <span
                            class="font-display font-bold text-2xl tracking-tight text-primary dark:text-white leading-none"
                            >NEXO</span
                        >
                        <span
                            class="text-xs uppercase tracking-widest text-gray-500 dark:text-gray-300 group-hover:text-primary transition-colors"
                            >Solutions</span
                        >
                    </div>
                </a>
            </div>

            <div class="hidden md:flex space-x-8 items-center">
                {
                    navItems.map((item) => (
                        <a
                            href={item.href}
                            class={`nav-link text-gray-700 dark:text-gray-200 hover:text-primary dark:hover:text-accent font-medium transition text-sm uppercase tracking-wide ${
                                currentPage === item.href
                                    ? "text-primary dark:text-accent font-bold"
                                    : ""
                            }`}
                        >
                            {item.name}
                        </a>
                    ))
                }
            </div>

            <div class="md:hidden flex items-center">
                <button
                    id="mobile-menu-btn"
                    class="text-gray-700 dark:text-gray-200 hover:text-primary focus:outline-none transition-colors"
                    aria-label="Abrir menú"
                >
                    <span id="menu-icon" class="material-icons text-3xl"
                        >menu</span
                    >
                </button>
            </div>
        </div>
    </div>

    <div
        id="mobile-menu"
        class="hidden md:hidden bg-surface-light dark:bg-secondary border-t border-gray-200 dark:border-gray-700 absolute w-full left-0 top-20 shadow-xl"
    >
        <div class="px-4 pt-2 pb-6 space-y-2">
            {
                navItems.map((item) => (
                    <a
                        href={item.href}
                        class={`block px-3 py-3 rounded-md text-base font-medium transition-colors ${
                            currentPage === item.href
                                ? "bg-primary/10 text-primary dark:text-accent font-bold"
                                : "text-gray-700 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-white/10 hover:text-primary dark:hover:text-accent"
                        }`}
                    >
                        {item.name}
                    </a>
                ))
            }
        </div>
    </div>
</nav>

<script>
    const menuBtn = document.getElementById("mobile-menu-btn");
    const mobileMenu = document.getElementById("mobile-menu");
    const menuIcon = document.getElementById("menu-icon");

    if (menuBtn && mobileMenu && menuIcon) {
        menuBtn.addEventListener("click", () => {
            // Alternar visibilidad del menú
            mobileMenu.classList.toggle("hidden");

            // Alternar icono (hamburguesa <-> cerrar)
            if (mobileMenu.classList.contains("hidden")) {
                menuIcon.textContent = "menu";
            } else {
                menuIcon.textContent = "close";
            }
        });
    }
</script>
