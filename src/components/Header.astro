---
const navItems = [
    { name: "Inicio", href: "#home" },
    { name: "Quiénes Somos", href: "#about" },
    { name: "Experiencia", href: "#experience" },
    { name: "Servicios", href: "#services" },
    { name: "Contacto", href: "#contact" },
];
---

<nav
    class="sticky top-0 z-50 bg-surface-light/90 dark:bg-secondary/90 backdrop-blur-md shadow-lg border-b border-gray-200 dark:border-gray-700 transition-colors duration-300"
>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-20 items-center">
            <div class="flex-shrink-0 flex items-center">
                <a href="#home" class="flex items-center gap-2 group">
                    <span
                        class="material-icons text-primary text-4xl group-hover:text-accent transition-colors"
                        >layers</span
                    >
                    <div class="flex flex-col">
                        <span
                            class="font-display font-bold text-2xl tracking-tight text-primary dark:text-white leading-none"
                            >NEXO</span
                        >
                        <span
                            class="text-xs uppercase tracking-widest text-gray-500 dark:text-gray-300 group-hover:text-primary transition-colors"
                            >Solutions</span
                        >
                    </div>
                </a>
            </div>

            <div class="hidden md:flex space-x-8 items-center">
                {
                    navItems.map((item) => (
                        <a
                            href={item.href}
                            class="nav-link text-gray-700 dark:text-gray-200 hover:text-primary dark:hover:text-accent font-medium transition text-sm uppercase tracking-wide"
                        >
                            {item.name}
                        </a>
                    ))
                }
            </div>

            <div class="md:hidden flex items-center">
                <button
                    class="text-gray-700 dark:text-gray-200 hover:text-primary focus:outline-none"
                >
                    <span class="material-icons text-3xl">menu</span>
                </button>
            </div>
        </div>
    </div>
</nav>

<script>
    // Lógica para resaltar el enlace activo según el scroll
    const sections = document.querySelectorAll("section");
    const navLinks = document.querySelectorAll(".nav-link");

    const observerOptions = {
        root: null,
        rootMargin: "0px",
        threshold: 0.3, // Se activa cuando el 30% de la sección es visible
    };

    const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
            if (entry.isIntersecting) {
                navLinks.forEach((link) => {
                    link.classList.remove(
                        "text-primary",
                        "dark:text-accent",
                        "font-bold",
                    );
                    link.classList.add("text-gray-700", "dark:text-gray-200");

                    if (link.getAttribute("href") === `#${entry.target.id}`) {
                        link.classList.add(
                            "text-primary",
                            "dark:text-accent",
                            "font-bold",
                        );
                        link.classList.remove(
                            "text-gray-700",
                            "dark:text-gray-200",
                        );
                    }
                });
            }
        });
    }, observerOptions);

    sections.forEach((section) => {
        observer.observe(section);
    });
</script>
