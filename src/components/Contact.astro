<section
    class="py-24 bg-white dark:bg-secondary relative overflow-hidden"
>
    <div
        class="absolute -left-20 top-20 w-64 h-64 bg-primary/20 dark:bg-surface-dark rounded-full filter blur-3xl opacity-50"
    >
    </div>
    <div
        class="absolute right-0 bottom-0 w-96 h-96 bg-accent/20 dark:bg-primary/30 rounded-full filter blur-3xl opacity-50"
    >
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="text-center mb-16">
            <h2
                class="text-4xl font-display font-bold text-slate-900 dark:text-white mb-4"
            >
                Contáctanos
            </h2>
            <p
                class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto"
            >
                Estamos listos para optimizar la gestión de sus carteras.
                Envíenos un mensaje.
            </p>
        </div>

        <div class="grid lg:grid-cols-2 gap-12 items-start">
            <div class="space-y-8">
                <div
                    class="bg-background-light dark:bg-surface-dark p-8 rounded-3xl shadow-lg border border-gray-100 dark:border-gray-700"
                >
                    <h3
                        class="text-2xl font-bold text-primary dark:text-white mb-6"
                    >
                        Información de contacto
                    </h3>
                    <div class="space-y-6">
                        <div class="flex items-start">
                            <div
                                class="bg-primary/10 dark:bg-white/10 p-3 rounded-lg mr-4"
                            >
                                <span
                                    class="material-icons text-primary dark:text-accent"
                                    >location_on</span
                                >
                            </div>
                            <div>
                                <p
                                    class="font-bold text-slate-800 dark:text-white"
                                >
                                    Oficina Central
                                </p>
                                <p class="text-gray-600 dark:text-gray-300">
                                    Buenos Aires, Argentina
                                </p>
                            </div>
                        </div>
                        <div class="flex items-start">
                            <div
                                class="bg-primary/10 dark:bg-white/10 p-3 rounded-lg mr-4"
                            >
                                <span
                                    class="material-icons text-primary dark:text-accent"
                                    >email</span
                                >
                            </div>
                            <div>
                                <p
                                    class="font-bold text-slate-800 dark:text-white"
                                >
                                    Email
                                </p>
                                <p class="text-gray-600 dark:text-gray-300">
                                    hello@reallygreatsite.com
                                </p>
                            </div>
                        </div>
                        <div class="flex items-start">
                            <div
                                class="bg-primary/10 dark:bg-white/10 p-3 rounded-lg mr-4"
                            >
                                <span
                                    class="material-icons text-primary dark:text-accent"
                                    >phone</span
                                >
                            </div>
                            <div>
                                <p
                                    class="font-bold text-slate-800 dark:text-white"
                                >
                                    Teléfono
                                </p>
                                <p class="text-gray-600 dark:text-gray-300">
                                    123-456-7890
                                </p>
                            </div>
                        </div>
                    </div>

                    <div
                        class="mt-8 pt-8 border-t border-gray-200 dark:border-gray-600"
                    >
                        <h4
                            class="font-bold text-slate-800 dark:text-white mb-4"
                        >
                            Redes Sociales
                        </h4>
                        <div class="flex space-x-4">
                            <span class="text-gray-600 dark:text-gray-300"
                                >@reallygreatsite</span
                            >
                        </div>
                    </div>
                </div>
            </div>

            <div
                class="bg-white dark:bg-surface-dark p-8 md:p-10 rounded-3xl shadow-xl border border-gray-100 dark:border-gray-700"
            >
                <form class="space-y-6">
                    <div class="grid md:grid-cols-2 gap-6">
                        <div>
                            <label
                                class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
                                for="name">Nombre</label
                            >
                            <input
                                class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-background-dark text-slate-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition"
                                id="name"
                                placeholder="Su nombre"
                                type="text"
                            />
                        </div>
                        <div>
                            <label
                                class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
                                for="company">Empresa</label
                            >
                            <input
                                class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-background-dark text-slate-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition"
                                id="company"
                                placeholder="Su empresa"
                                type="text"
                            />
                        </div>
                    </div>
                    <div>
                        <label
                            class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
                            for="email">Email corporativo</label
                        >
                        <input
                            class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-background-dark text-slate-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition"
                            id="email"
                            placeholder="nombre@empresa.com"
                            type="email"
                        />
                    </div>
                    <div>
                        <label
                            class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
                            for="message">Mensaje</label
                        >
                        <textarea
                            class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-background-dark text-slate-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition resize-none"
                            id="message"
                            placeholder="¿En qué podemos ayudarle?"
                            rows="4"></textarea>
                    </div>
                    <button
                        class="w-full bg-primary hover:bg-opacity-90 text-white font-bold py-4 rounded-xl shadow-lg transform transition hover:-translate-y-1"
                        type="submit"
                    >
                        Enviar Consulta
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>
